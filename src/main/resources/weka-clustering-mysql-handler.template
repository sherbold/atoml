	        preparedSql.append("`exception`,");
	        preparedSql.append("`message`,");
	        preparedSql.append("`stacktrace`) VALUES ");
	        preparedSql.append("(?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?)");

