	                             String dbName,
	                             String dbUser,
	                             String dbPass)
	    {
	        this.connectionPool = new MysqlDataSource();
	        this.connectionPool.setUser(dbUser);
	        this.connectionPool.setPassword(dbPass);
	        this.connectionPool.setUrl("jdbc:mysql://" + dbHost + ":" + dbPort + "/" + dbName + "?useSSL=false");
	    }

